rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    /**
     * Users collection - HAMMAGA OCHIQ
     */
    match /users/{userId} {
      allow read, write: if true;
    }

    /**
     * Projects collection - HAMMAGA OCHIQ
     */
    match /projects/{projectId} {
      allow read, write: if true;
    }

    /**
     * Messages collection - HAMMAGA OCHIQ
     */
    match /messages/{messageId} {
      allow read, write: if true;
    }

    /**
     * Notifications collection - HAMMAGA OCHIQ
     */
    match /notifications/{notificationId} {
      allow read, write: if true;
    }

    /**
     * BARCHA collection'lar - HAMMAGA OCHIQ
     */
    match /{document=**} {
      allow read, write: if true;
    }
  }
}