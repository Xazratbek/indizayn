/**
 * @fileoverview Firestore Security Rules - TEST MODE
 * ⚠️ WARNING: Bu faqat development va test uchun!
 * ⚠️ Production da ishlatmang - xavfsizlik yo'q!
 * 
 * Bu ruleset barcha authenticated foydalanuvchilarga
 * barcha collection'larda to'liq CRUD ruxsat beradi.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    /**
     * Test uchun: Barcha signed-in userlar uchun ochiq
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Users collection - hamma narsa ochiq
     */
    match /users/{userId} {
      allow read, write: if isSignedIn();
    }

    /**
     * Projects collection - hamma narsa ochiq
     */
    match /projects/{projectId} {
      allow read, write: if isSignedIn();
    }

    /**
     * Messages collection - hamma narsa ochiq
     */
    match /messages/{messageId} {
      allow read, write: if isSignedIn();
    }

    /**
     * Notifications collection - hamma narsa ochiq
     */
    match /notifications/{notificationId} {
      allow read, write: if isSignedIn();
    }

    /**
     * Boshqa barcha collection'lar ham ochiq
     */
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}